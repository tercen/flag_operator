{
  "name": "Flag Values",
  "description": "Highlight text or numerical values based on a condition.",
  "tags": ["data wrangling"],
  "authors": ["tercen"],
  "urls": ["https://github.com/tercen/flag_operator"],
  "properties": [
    {
    "kind": "EnumeratedProperty",
    "name": "type",
    "defaultValue": "numeric",
    "values": [
      "numeric",
      "character"
    ],
    "description": "Type of data to flag."
  },
    {
    "kind": "EnumeratedProperty",
    "name": "comparison",
    "defaultValue": "equals",
    "values": [
      "equals",
      "greater",
      "less",
      "greater_or_equal",
      "less_or_equal",
      "top",
      "bottom",
      "is_in",
      "contains"
    ],
    "description": "Comparison to perform"
  },
  {
    "kind": "StringProperty",
    "name": "value",
    "defaultValue": "0.5",
    "description": "Value to compare data to."
  },
  {
    "kind": "StringProperty",
    "name": "flag.name",
    "defaultValue": "flag",
    "description": "Name to give to the output variable containing the flags."
  },,
  {
    "kind": "StringProperty",
    "name": "pass.flag",
    "defaultValue": "pass",
    "description": "Name to give to observations that satisfy the condition."
  },
  {
    "kind": "StringProperty",
    "name": "fail.flag",
    "defaultValue": "fail",
    "description": "Name to give to observations that do not satisfy the condition."
  }
  ]
}


