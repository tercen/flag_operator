{
  "name": "Flag Values",
  "description": "Labels text or numerical values based on a condition.",
  "tags": [
    "annotation"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/flag_operator"
  ],
  "properties": [
    {
      "kind": "EnumeratedProperty",
      "name": "type",
      "defaultValue": "numeric",
      "values": [
        "numeric",
        "character"
      ],
      "description": "Type of data to flag."
    },
    {
      "kind": "EnumeratedProperty",
      "name": "comparison",
      "defaultValue": "equals",
      "values": [
        "equals",
        "greater",
        "less",
        "greater_or_equal",
        "less_or_equal",
        "top",
        "bottom",
        "is_in",
        "contains"
      ],
      "description": "Comparison to perform"
    },
    {
      "kind": "StringProperty",
      "name": "value",
      "defaultValue": "0.5",
      "description": "Value to compare data to."
    },
    {
      "kind": "StringProperty",
      "name": "flag.name",
      "defaultValue": "flag",
      "description": "Name to give to the output variable containing the flags."
    },
    {
      "kind": "StringProperty",
      "name": "pass.flag",
      "defaultValue": "pass",
      "description": "Name to give to observations that satisfy the condition."
    },
    {
      "kind": "StringProperty",
      "name": "fail.flag",
      "defaultValue": "fail",
      "description": "Name to give to observations that do not satisfy the condition."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
        "kind": "CrosstabSpec",
        "metaFactors": [
          {
            "kind": "MetaFactor",
            "name": "Text Values",
            "type": "",
            "description": "Values to flag, if they are textual.",
            "ontologyMapping": "variable",
            "crosstabMapping": "row",
            "cardinality": "0..n",
            "factors": []
          }
        ],
        "axis": [
          {
            "kind": "AxisSpec",
            "metaFactors": [
              {
                "kind": "MetaFactor",
                "name": "Numeric Values",
                "type": "numeric",
                "description": "Values to flag, if they are numeric.",
                "ontologyMapping": "measurement",
                "crosstabMapping": "y",
                "cardinality": "0..1",
                "factors": []
              }
            ]
          }
        ]
      }
    ]
  }
}